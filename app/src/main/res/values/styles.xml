<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:typeface">monospace</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="searchViewStyle">@style/SearchViewMy</item>
        <item name="android:textColorHint">@color/primary_light</item>
        <item name="colorControlNormal">@color/primary_text</item>
        <item name="android:actionMenuTextColor">@color/primary_text</item>
        <item name="colorControlActivated">@color/primary_text</item>
    </style>


    <style name="ExploreTheme" parent="AppTheme">
        <item name="colorControlActivated">@color/primary_text</item>
    </style>

    <style name="SearchViewMy" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorHint">@color/primary_light</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/icons</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
</resources>
