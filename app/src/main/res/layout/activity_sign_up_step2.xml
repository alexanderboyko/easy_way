<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_accent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/sign_up_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_toolbar"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp">

        <RelativeLayout
            android:id="@+id/sign_up_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/sign_up_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textAllCaps="true"
                android:textColor="@color/icons"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/sign_up_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_name_label"
                android:layout_marginTop="4dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/sign_up_name"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:inputType="text"
                    android:textColor="@color/icons"
                    android:textSize="16sp"
                    app:backgroundTint="@color/icons" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/sign_up_surname_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_name_layout"
                android:layout_marginTop="12dp"
                android:text="@string/surname"
                android:textAllCaps="true"
                android:textColor="@color/icons"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/sign_up_surname_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_surname_label"
                android:layout_marginTop="4dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/sign_up_surname"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="4dp"
                    android:hint=""
                    android:inputType="text"
                    android:textColor="@color/icons"
                    android:textSize="16sp"
                    app:backgroundTint="@color/icons" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/sign_up_address_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_surname_layout"
                android:layout_marginTop="12dp"
                android:text="@string/address"
                android:textAllCaps="true"
                android:textColor="@color/icons"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/sign_up_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_address_label"
                android:layout_marginTop="4dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/sign_up_address"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_white_24px"
                    android:drawableRight="@drawable/ic_arrow_drop_down_white_24px"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint=""
                    android:inputType="text"
                    android:textColor="@color/icons"
                    android:textSize="16sp"
                    app:backgroundTint="@color/icons" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/sign_up_birthday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_address_layout"
                android:layout_marginTop="12dp"
                android:text="@string/birthday"
                android:textAllCaps="true"
                android:textColor="@color/icons"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/sign_up_birthday_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_birthday_label"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/sign_up_gender_layout"
                android:layout_toStartOf="@+id/sign_up_gender_layout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/sign_up_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_white_24px"
                    android:drawableRight="@drawable/ic_arrow_drop_down_white_24px"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint=""
                    android:inputType="text"
                    android:textColor="@color/icons"
                    android:textSize="16sp"
                    app:backgroundTint="@color/icons" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/sign_up_gender_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_address_layout"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@id/sign_up_birthday_layout"
                android:layout_toRightOf="@id/sign_up_birthday_layout"
                android:text="@string/gender"
                android:textAllCaps="true"
                android:textColor="@color/icons"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/sign_up_gender_layout"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/sign_up_gender_label"
                android:layout_marginTop="4dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/sign_up_gender"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_white_24px"
                    android:drawableRight="@drawable/ic_arrow_drop_down_white_24px"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint=""
                    android:inputType="text"
                    android:text="@string/male"
                    android:textColor="@color/icons"
                    android:textSize="16sp"
                    app:backgroundTint="@color/icons" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/sign_up_about_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_birthday_layout"
                android:layout_marginTop="12dp"
                android:text="@string/about"
                android:textAllCaps="true"
                android:textColor="@color/icons"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/sign_up_about_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/sign_up_about_label"
                android:layout_marginTop="4dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/sign_up_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sign_up_about_label"
                    android:gravity="center|top|start"
                    android:hint="@string/optionally"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:maxLines="6"
                    android:minHeight="54dp"
                    android:minLines="2"
                    android:textColor="@color/icons"
                    android:textColorHint="@color/white_70_opacity"
                    android:textSize="16sp"
                    app:backgroundTint="@color/icons" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/sign_up_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_about_layout"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/drawable_round_button_fill"
                android:text="@string/sign_up"
                android:textAllCaps="false"
                android:textColor="@color/icons"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>