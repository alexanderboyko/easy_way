<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_review_user_photo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="4dp"
        android:tint="@color/icons"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/item_review_no_photo_layout"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="4dp"
        android:background="@drawable/drawable_oval_primary_color"
        android:gravity="center"
        android:visibility="visible">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:tint="@color/icons"
            app:srcCompat="@drawable/ic_person_white_24px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_review_user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/item_review_starLayout"
        android:layout_toStartOf="@+id/item_review_starLayout"
        android:gravity="center|start|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_review_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="1"
            android:text="@string/default_long"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_review_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/default_long"
            android:textColor="@color/secondary_text"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_review_starLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_review_star1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/ic_star_rate_white_18px"
            app:tint="@color/primary_text" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_review_star2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/ic_star_rate_white_18px"
            app:tint="@color/primary_text" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_review_star3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/ic_star_rate_white_18px"
            app:tint="@color/primary_text" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_review_star4"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/ic_star_rate_white_18px"
            app:tint="@color/primary_text" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_review_star5"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/ic_star_rate_white_18px"
            app:tint="@color/primary_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_review_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_review_user_info_layout"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="@string/default_very_long" />
</RelativeLayout>